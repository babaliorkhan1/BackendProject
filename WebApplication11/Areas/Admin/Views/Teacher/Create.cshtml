@model Teacher


<div class="container">
    <form method="post" enctype="multipart/form-data">
          <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
      
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input type="text" class="form-control" asp-for="FullName" />
            <span class="text text-danger" asp-validation-for="FullName"></span>

        </div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input type="text" class="form-control" asp-for="Title" />
            <span class="text text-danger" asp-validation-for="Title"></span>

        </div>
        <div class="form-group">
            <label asp-for="AboutText"></label>
            <input type="text" class="form-control" asp-for="AboutText" />
            <span class="text text-danger" asp-validation-for="AboutText"></span>

        </div>

        <div class="form-group">
            <label asp-for="Degree"></label>
            <input type="text" class="form-control" asp-for="Degree" />
            <span class="text text-danger" asp-validation-for="Degree"></span>

        </div>

        <div class="form-group">
            <label asp-for="Hobbies"></label>
            <input type="text" class="form-control" asp-for="Hobbies" />
            <span class="text text-danger" asp-validation-for="Hobbies"></span>

        </div>

        <div class="form-group">
            <label asp-for="Experience"></label>
            <input type="text" class="form-control" asp-for="Experience" />
            <span class="text text-danger" asp-validation-for="Experience"></span>

        </div>

        <div class="form-group">
            <label asp-for="Faculty"></label>
            <input type="text" class="form-control" asp-for="Faculty" />
            <span class="text text-danger" asp-validation-for="Faculty"></span>

        </div>


        <div class="form-group">
            <select asp-for="PositionId" class="form-select" aria-label="Disabled select example">
                @foreach (var item in ViewBag.Positions)
                {
                    <option>Choose category</option>
                    <option value="@item.Id">@item.Name</option>
                }

            </select>
            <span class="text text-danger" asp-validation-for="PositionId"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="text" class="form-control" asp-for="Email" />
            <span class="text text-danger" asp-validation-for="Email"></span>

        </div>

        <div class="form-group">
            <label asp-for="Number"></label>
            <input type="text" class="form-control" asp-for="Number" />
            <span class="text text-danger" asp-validation-for="Number"></span>

        </div>

        <div class="form-group">
            <label asp-for="Skype"></label>
            <input type="text" class="form-control" asp-for="Skype" />
            <span class="text text-danger" asp-validation-for="Skype"></span>

        </div>


        <div class="form-group">
            <label asp-for="FormFile"></label>
            <input accept="image/*" type="file" class="form-control" asp-for="FormFile" />
            <span class="text text-danger" asp-validation-for="FormFile"></span>

        </div>
        @Html.AntiForgeryToken()
        <button type="submit">Create</button>
    </form>
</div>
